#include <isce/core/detail/InterpolateOrbit.h>

namespace isce { namespace cuda { namespace core {

inline
OrbitView::OrbitView(const Orbit & orbit)
:
    _time(orbit.time()),
    _position(orbit.position().data().get()),
    _velocity(orbit.velocity().data().get()),
    _interp_method(orbit.interpMethod())
{}

CUDA_DEV
inline
isce::error::ErrorCode
OrbitView::interpolate(isce::core::Vec3 * position,
                       isce::core::Vec3 * velocity,
                       double t,
                       isce::core::OrbitInterpBorderMode border_mode) const
{
    return isce::core::detail::interpolateOrbit(position, velocity, *this, t, border_mode);
}

}}}
